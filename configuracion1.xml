<?xml version="1.0" encoding="UTF-8"?>
<application name="git" exePath="C:\git\git.exe">
    <application name="commit">
        <parameters>
            <parameter>
                <flag>commit</flag>
            </parameter>
            <parameter>
                <flag>-m</flag>
                <id>textMessage</id>              
            </parameter>
        </parameters>
        <window>
            <head>
                <label>Git application to do a commit</label>
            </head>
            <label>Mensaje</label>
            <textBox id="textMessage"></textBox>
        </window>
        <validation>
            <textBox id="textMessage" maxSize="30"/>
        </validation>
    </application>    
</application>
