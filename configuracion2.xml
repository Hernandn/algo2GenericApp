<?xml version="1.0" encoding="UTF-8"?>
<application name="Copy Files" exePath="C:\Windows\system\copy.exe">
    <parameters>
        <parameter>
            <flag></flag>
            <id>fileFrom</id>
        </parameter>
        <parameter>
            <flag></flag>
            <id>FileTo</id>
        </parameter>
    </parameters>
    <window>
        <head>
            <label>Application to Copy Files</label>
        </head>
        <label>Archivo Origen</label>
        <fileInput id="fileFrom" type="file"></fileInput>
        <label>Carpeta Destino</label>
        <folderInput id="FileTo" type="directory"></folderInput>
    </window>
    <validation>
        <fileInput id="fileFrom" exists="true"></fileInput>
        <fileInput id="FileTo" exists="false"></fileInput>
    </validation>
</application>