<?xml version="1.0" encoding="UTF-8"?>
<applications>
	<application name="Copy File to a Folder" exePath="" command="copy">	<!-- completar el path a utilizar o el comando solo -->
		<parameters>
			<parameter>
				<flag></flag>
				<id>fileFrom</id>
			</parameter>
			<parameter>
				<flag></flag>
				<id>folderTo</id>
			</parameter>
		</parameters>
		<window>
			<head>
				<label>Application to Copy a File to a folder</label>
			</head>
			<label>Archivo Origen</label>
			<fileInput id="fileFrom" type="file"></fileInput>
			<label>Carpeta Destino</label>
			<folderInput id="folderTo" type="directory"></folderInput>
		</window>
		<validation>
			<fileInput id="fileFrom" exists="true"></fileInput>	<!-- tiene que existir el archivo -->
			<fileInput id="folderTo" exists="true"></fileInput>	<!-- tiene que existir la carpeta destino -->
		</validation>
	</application>

	<application name="Copy files to a Folder" exePath="" command="xcopy">
		<parameters>
			<parameter>
				<flag></flag>
				<id>folderFrom</id>
			</parameter>
			<parameter>
				<flag></flag>
				<id>folderTo</id>
			</parameter>
		</parameters>
		<window>
			<head>
				<label>Application to Copy Files from a folder to another folder</label>
			</head>
			<label>Carpeta Origen</label>
			<folderInput id="folderFrom" type="directory"></folderInput>
			<label>Carpeta Destino</label>
			<folderInput id="folderTo" type="directory"></folderInput>
		</window>
		<validation>
			<folderInput id="folderFrom" exists="true"></folderInput>
			<fileInput id="folderTo" exists="true"></fileInput> 
		</validation>
	</application>
</applications>

