<?xml version="1.0" encoding="UTF-8"?>
<applications>
	<application name="Copy File to a Folder" exePath="" command="copy">	<!-- completar el path a utilizar o el comando solo -->
		<parameters>
			<parameter>
				<flag></flag>
				<id>fileFrom</id>
			</parameter>
			<parameter>
				<flag></flag>
				<id>folderTo</id>
			</parameter>
		</parameters>
		<window>
			<head>
				<label>Application to Copy a File to a folder</label>
			</head>
			<label>Archivo Origen</label>
			<fileInput id="fileFrom" type="file"></fileInput>
			<label>Carpeta Destino</label>
			<folderInput id="folderTo" type="directory"></folderInput>
		</window>
		<validation>
			<fileInput id="fileFrom" exists="true"></fileInput>	<!-- tiene que existir el archivo -->
			<fileInput id="folderTo" exists="true"></fileInput>	<!-- tiene que existir la carpeta destino -->
		</validation>
	</application>

	<application name="Copy files to a Folder" exePath="" command="xcopy">
		<parameters>
			<parameter>
				<flag></flag>
				<id>folderFrom</id>
			</parameter>
			<parameter>
				<flag></flag>
				<id>folderTo</id>
			</parameter>
		</parameters>
		<window>
			<head>
				<label>Application to Copy Files from a folder to another folder</label>
			</head>
			<label>Carpeta Origen</label>
			<folderInput id="folderFrom" type="directory"></folderInput>
			<label>Carpeta Destino</label>
			<folderInput id="folderTo" type="directory"></folderInput>
		</window>
		<validation>
			<folderInput id="folderFrom" exists="true"></folderInput>
			<fileInput id="folderTo" exists="true"></fileInput> 
		</validation>
	</application>
	
	<application name="Ipconfig" exePath="" command="ipconfig">
		<parameters>
			<parameter>
				<flag></flag>
				<id>modifier</id>
			</parameter>
		</parameters>
		<window>
			<head>
				<label>Ipconfig Diagnostic Utility for Network Connections</label>
			</head>
			<item>
				<label>Modifier</label>
				<comboBox id="modifier">
					<comboBoxItem tag="Command Help" value="/?"></comboBoxItem>
					<comboBoxItem tag="/all" value="/all"></comboBoxItem>
					<comboBoxItem tag="/renew" value="/renew">
						<label>Adapter (optional)</label>
						<textBox id="adapter1"></textBox>
					</comboBoxItem>
					<comboBoxItem tag="/release" value="/release">
						<label>Adapter (optional)</label>
						<textBox id="adapter1"></textBox>
					</comboBoxItem>
					<comboBoxItem tag="/flushdns" value="/flushdns"></comboBoxItem>
					<comboBoxItem tag="/displaydns" value="/displaydns"></comboBoxItem>
					<comboBoxItem tag="/registerdns" value="/registerdns"></comboBoxItem>
					<comboBoxItem tag="/showclassid" value="/showclassid">
						<label>Adapter</label>
						<textBox id="adapter2"></textBox>
					</comboBoxItem>
					<comboBoxItem tag="/setclassid" value="/setclassid">
						<label>Adapter</label>
						<textBox id="adapter2"></textBox>
						<label>Class ID</label>
						<textBox id="classId"></textBox>
					</comboBoxItem>
				</comboBox>
			</item>

		</window>
		<validation>
			<textBox id="adapter1" maxSize="50" nullable="true"></textBox>
			<textBox id="adapter2" maxSize="50" nullable="false"></textBox>
			<textBox id="classId" maxSize="50" nullable="false"></textBox>
		</validation>
	</application>
</applications>

